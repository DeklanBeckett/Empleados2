@{
    ViewData["Title"] = "Iniciar sesión";
}
<br>
<div class="login-card mt-5">
    <div class="card-header">
        <div class="log">Login</div>
    </div>
    <form method="post" asp-action="Logins" asp-controller="Sesion">
        <div class="form-group">
            <label for="correo">Correo:</label>
            <input required="" type="text" name="correo">
        </div>
        <div class="form-group">
            <label for="contraseña">Contraseña:</label>
            <input required="" type="password" name="contraseña">
        </div>
        <div class="form-group text-center">
            <button class="animated-button" type="submit">
                <span>Iniciar sesión</span>
                <span></span>
            </button>
        </div>
    </form>
</div>



<style>
    body {
        background-image: url('https://e1.pxfuel.com/desktop-wallpaper/581/154/desktop-wallpaper-backgrounds-for-login-page-login-page.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
    }
</style>